<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_company_form_inherit_payroll" model="ir.ui.view">
        <field name="name">res.company.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page" position="after">
                <page string="Payroll API">
                    <group>
                        <field name="keypay_url" placeholder="e.g. https://ioppolo.yourpayroll.com.au"/>
                        <field name="api_key" password="True"/>
                        <field name="payroll_business_id" placeholder="e.g. 45690"/>
                        <field name="payroll_base_url" placeholder="e.g. https://ioppolo.yourpayroll.com.au/api/v2"/>
                        <button name="check_connection" type="object" string="Test Connection" class="oe_highlight"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="ia_view_employee_form_inherit1_payroll" model="ir.ui.view">
        <field name="name">ia.hr.employee.form.inherit1</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="priority">17</field>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="Payroll Settings" name="pay_setting" groups="hr.group_hr_user">
                    <group>
                        <group>
                            <field name="payroll_employee_id"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="replace">
                <field name="user_id" options="{'no_create': True}"/>
                <field name="emp_type_id" options="{'no_create': True}"/>
                <field name="pay_schedule_id" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

</odoo>
