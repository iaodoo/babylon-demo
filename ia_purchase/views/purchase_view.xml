<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="ia_purchase_order_form" model="ir.ui.view">
        <field name="name">ia_purchase_order_form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="attributes">
              <attribute name="readonly">0</attribute>
            </xpath>

        </field>
  </record>

  <!-- Purchase Order Form Inheritance -->
  <record id="purchase_order_form_inherit_ia_purchase" model="ir.ui.view">
    <field name="name">purchase.order.form.inherit.ia.purchase</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">
        
      <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
          <field name="account_id" required="1"/>
      </xpath>

    </field>
  </record>

</odoo>
