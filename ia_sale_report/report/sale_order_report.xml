                    <div style="font-size:12px;float:left;width:50%;">
                        <span t-field="doc.payment_term_id.note"/>
                    </div>
                </div>
            </p>
            <p style="clear: both;">
                <div style="font-size:12px;float:left;width:50%;padding-top: 25px;">
                    <span t-field="doc.note" style="font-size:12px;"/>
                </div>
            </p>
            <br/>
            <br/>
        </xpath>
      
