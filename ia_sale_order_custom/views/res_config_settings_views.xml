<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.rental.invoice.terms</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="invoicing_settings" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="use_invoice_terms">
                        <div class="o_setting_left_pane">
                            <field name="use_rental_invoice_terms"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="use_rental_invoice_terms"/>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                  aria-label="Values set here are company-specific." groups="base.group_multi_company"
                                  role="img"/>
                            <div class="text-muted">
                                Show standard terms &amp; conditions on Rental invoices
                            </div>
                            <div class="content-group" attrs="{'invisible': [('use_rental_invoice_terms','=',False)]}">
                                <div class="mt16">
                                    <field name="rental_invoice_terms"
                                           placeholder="Insert your terms &amp; conditions here..."/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>
