<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_followup.action_report_followup" model="ir.actions.report">
            <field name="paperformat_id" ref="ia_sale_order_custom.paperformat_report_followup"/>
        </record>
        <template id="followup_filter_info_template" inherit_id="account_followup.followup_filter_info_template">
            <xpath expr="//div[hasclass('fallback_header')]/div" position="attributes">
                <attribute name="class">col-5</attribute>
            </xpath>
            <xpath expr="//div[hasclass('fallback_header')]" position="attributes">
                <attribute name="style">display:none;</attribute>
            </xpath>
            <xpath expr="//div[@t-field='partner_addr.self']" position="replace">
                <div t-field="partner_addr.self"/>
            </xpath>
            <xpath expr="//span[@t-field='partner_addr.vat']" position="replace"/>
            <xpath expr="//div[hasclass('print_only')]" position="attributes">
                <attribute name="style">margin-bottom: -40px;</attribute>
            </xpath>
            <xpath expr="//div[hasclass('print_only')]//p" position="attributes">
                <attribute name="style">margin-top: 15px;</attribute>
            </xpath>
        </template>
    </data>
</odoo>
