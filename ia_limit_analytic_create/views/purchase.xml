<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_order_form_inherit_ia_limit_analytic_create" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.ia.limit.analytic.create</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='account_analytic_id']"
                       position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='analytic_tag_ids']"
                       position="attributes">
                    <attribute name="options">{'color_field': 'color','no_create': True}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
